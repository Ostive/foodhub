Content-Type: application/json

{
  "firstName": "French Bistro",
  "lastName": "Owner",
  "email": "bistro@example.com",
  "password": "SecurePass123!",
  "phone": "+33612345678",
  "address": "123 Rue de Paris, 75001 Paris, France",
  "profilePicture": "https://example.com/profiles/bistro.jpg",
  "website": "https://frenchbistro.com",
  "rib": "FR7630001007941234567890185",
  "minimumPurchase": 15,
  "deliveryRadius": 5,
  "averagePreparationTime": 30,
  "tags": ["french", "bistro", "gourmet"],
  "planning": {
    "mondayOpen": "11:00",
